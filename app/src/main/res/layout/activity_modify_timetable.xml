<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".timetableActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="#3079d1"
        android:text="시간표수정"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <TableRow android:layout_width="40sp">

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#3079d1"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="20"
                android:text="월"
                android:textColor="#FFFFFF"></TextView>

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#3079d1"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="20"
                android:text="화"
                android:textColor="#FFFFFF"></TextView>

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#3079d1"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="20"
                android:text="수"
                android:textColor="#FFFFFF"></TextView>

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#3079d1"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="20"
                android:text="목"
                android:textColor="#FFFFFF"></TextView>

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#3079d1"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="20"
                android:text="금"
                android:textColor="#FFFFFF"></TextView>

        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_0_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_0_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_0_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_0_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_0_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>
        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_1_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_1_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_1_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_1_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_1_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>
        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_2_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_2_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_2_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_2_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_2_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>
        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_3_0"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_3_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_3_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_3_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_3_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>
        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_4_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_4_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_4_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_4_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_4_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>
        </TableRow>

        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_5_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_5_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_5_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_5_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_5_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>
        </TableRow>


        <TableRow android:layout_width="40sp">

            <EditText
                android:id="@+id/table2_6_0"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_6_1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_6_2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_6_3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/table2_6_4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#AFD4FF"
                android:gravity="center"></EditText>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/modifyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#3079d1"
        android:bufferType="normal"
        android:text="적용"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

</LinearLayout>